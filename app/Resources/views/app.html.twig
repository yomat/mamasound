{%  extends "events/layout.html.twig" %}

{% block title %}
	{{ parent()}} - concerts
{% endblock %}


{% block body %}

    <div class="west col-lg-3 ">

        <div class="container">
            <div id="sidebar">



                <div class="row datepicker-here " data-language='fr'></div>

                <div id="ad" class="row">
                    <div class="col-lg-6" >
                        <div class="space3d">
                            <div class="world3d shadow">
                                <a href="/mamasound/shop/mamapass">
                                    <img src="{{ asset('images/mamapass.jpg') }}" width="100%">
                                </a>
                            </div>
                        </div>
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="col-lg-6">
                            <button class="row btn btn-primary" onclick="newEvent()">
                                <i class="fa fa-music"></i>&nbsp; nouvel événement
                            </button>
                            <button class="row btn btn-primary" onclick="newGroup()">
                                <i class="fa fa-users"></i>&nbsp; nouvel artiste
                            </button>
                            <button class="row btn btn-primary" onclick="newPlace()">
                                <i class="fa fa-map-marker"></i>&nbsp; nouvelle place
                            </button>
                        </div>
                    {% endif %}

                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div id="center">
            <h1>loading ..</h1>
        </div>
    </div>



    <div class="east col-lg-3">
        <div class="container">
            <div id="sidebar">
                <div class="row">
                        <div class="map col-sm-12 shadow">
                            <div id="mapid"></div>
                        </div>

                </div>

                <div id="place-detail-small"></div><br>

                <div id="event_detail_small"></div><br>



            </div>
        </div>
    </div>


{% endblock %}