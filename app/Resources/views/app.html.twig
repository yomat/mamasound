{%  extends "events/layout.html.twig" %}

{% block title %}
	{{ parent()}} - concerts
{% endblock %}


{% block body %}

    <div class="col-lg-3">

        <div class="row">
            <div class="col-xl-12">

                <div class="row">
                    <div class="col-xl-12">
                        <div class="datepicker-here " data-language='fr'></div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-xl-6" >
                        <div class="space3d">
                            <div class="world3d shadow">
                                <a href="/mamasound/shop/mamapass">
                                    <img src="{{ asset('images/mamapass.jpg') }}" width="100%">
                                </a>
                            </div>
                        </div>
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="col-xl-6">
                            <button class="btn btn-primary btn-block btn-text-left" onclick="newEvent()">
                                <i class="fa fa-music"></i>&nbsp; nouvel événement
                            </button>


                            <button class="btn btn-primary btn-block btn-text-left" onclick="newGroup()">
                                <i class="fa fa-users"></i>&nbsp; nouvel artiste
                            </button>


                            <button class="btn btn-primary btn-block btn-text-left" onclick="newPlace()">
                                <i class="fa fa-map-marker"></i>&nbsp; nouveau lieu
                            </button>
                        </div>
                    {% endif %}

                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="row" id="center">
            <h1>loading ..</h1>
        </div>
    </div>



    <div class="col-lg-3">
        <!-- carte -->
        <div class="row">
            <div class="col-xl-12">
                <div class="map shadow">
                    <div id="mapid"></div>
                </div>
            </div>
        </div>
        <!-- lieu -->
        <div class="row" id="place-detail-small"></div>
        <!-- événement -->
        <div class="row " id="event_detail_small"></div>
    </div>


{% endblock %}