<div class="col-xl-12">

    <div class="groupInfo-small shadow" >

        <div class="row no-gutters">

            <div class="col-xl-6">
                {%  if  (event.groups|length > 0) and
                        (event.groups[0].image is not null) and
                        (event.groups[0].image.url is not null)
                %}
                    <img class="place-sm-photo" src="../../images/{{ event.groups[0].image.url }}">
                {% else %}
                    <img class="place-sm-photo" src="{{ asset('images/photo_group.png') }}">
                {% endif %}
            </div>

            <div class="col-xl-6">
                <h3><strong>{{ event.title }}</strong></h3>
                <text>{{ event.article }}</text>
            </div>
        </div>
    </div>
</div>
