{%  extends "events/layout.html.twig" %}

{% block title %}
	{{ parent()}} - concerts
{% endblock %}


{% block body %}

    <div class="west col-md-3">
        <div class="datepicker-here col-sm-12" data-language='fr'></div>

        <div id="mamapass" class="col-sm-12">
            <div>
                <a href="/MamaPass" style="width: 100%; float: left;">
                    <img src="http://www.mamasound.fr/assets/4db236f61d2c2b779dee578374052121.jpg" width="100%" background-color="lightgrey">
                </a>
            </div>
            <div>

            </div>
        </div>
    </div>

    <div id="center" class="col-md-6">
        <div class="col-sm-12 events">

                {% for event in events %}

                    {% if event.type == "expo" %}
                        {% include "events/expo_cell.html.twig" %}
                    {% endif %}

                    {% if event.type == "concert" %}
                        {% include "events/concert_cell.html.twig" %}
                    {% endif %}

                    {% if event.type == "theatre" %}
                        {% include "events/theatre_cell.html.twig" %}
                    {% endif %}

                {% endfor %}

        </div>
    </div>

    <div class="east col-md-3">

            <div class="row">
                    <div class="map col-sm-12">
                        <div id="mapid"></div>
                    </div>

            </div>

            <div class="row placeInfo-small">
                <div class="col-sm-6">
                        <img class="place-sm-photo" src="{{ asset('images/placeImage.png') }}">
                </div>
                <div class="col-sm-6 place">
                        <h3><strong>La petite sc√®ne</strong></h3>
                        <text>6 Rue de la Fontaine</text><br>
                        <text>34000 Montpellier</text><br>
                        <text>04 67 54 22 15</text>
                </div>
            </div>

            <div class="row groupInfo-small">
                <div class="col-sm-6">
                    <img class="photo-group" src="{{ asset('images/photo_group.png') }}">
                </div>
                <div class="col-sm-6">
                    <h3><strong>Que Tengo</strong></h3>
                    <text>Fermez les yeux, aiguisez votre corps et laissez-vous emporter dans un univers de multiples sensations!
                    </text>
                </div>
            </div>


        </div>


{% endblock %}